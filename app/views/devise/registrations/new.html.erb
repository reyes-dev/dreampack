<main class="flex h-screen items-center text-white justify-center">
  <section class="flex w-96 flex-col gap-4 whitespace-pre-line break-words rounded-xl 
   shadow-xl bg-[hsla(0,0%,0%,0.15)] p-8">

<h2 class="self-center text-3xl">Sign up for Dreampack</h2>

  <%= render "devise/shared/error_messages", resource: resource %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="flex flex-col gap-1">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-black p-2 border border-black rounded w-full" %>
  </div>

  <div class="flex flex-col gap-1">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em class="text-sky-500">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "text-black p-2 border border-black rounded w-full" %>
  </div>

  <div class="flex flex-col gap-1">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-black p-2 border border-black rounded w-full" %>
  </div>

  <div class="flex flex-col gap-4">
    <div class="flex self-end">
      <%= f.submit "Sign up", class: "text-lg flex w-fit justify-center items-center bg-blue-500 hover:bg-blue-600 rounded h-min p-2 cursor-pointer" %>
    </div>
    <div class="flex justify-between">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

</section>
</main>
